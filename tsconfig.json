{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2017",
    "lib": ["es2017", "esnext.asynciterable"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@contract/*": ["contract/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "test/**/*.ts",
    "contract/**/*.json",
    "onchain/**/*.ts",
    "script/**/*.ts",
    "job/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
